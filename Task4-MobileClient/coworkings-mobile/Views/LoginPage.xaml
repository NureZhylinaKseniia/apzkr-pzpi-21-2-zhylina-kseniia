<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coworkings_mobile.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Entry x:Name="LoginEntry" Text="{Binding Login}" />
        <Entry x:Name="PasswordEntry" IsPassword="True" Text="{Binding Password}" />
        <Button x:Name="LoginButton" Command="{Binding LoginCommand}" />
    </VerticalStackLayout>
</ContentPage>